# Configuração do Nginx como proxy reverso para a API de Scoring Decision

server {
    listen 80;
    server_name api.decision-scoring.com; # Substitua pelo seu domínio

    location / {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Configurar o timeout para requisições longas
    proxy_connect_timeout 300s;
    proxy_read_timeout 300s;

    # Comprimir respostas para melhor performance
    gzip on;
    gzip_comp_level 5;
    gzip_min_length 256;
    gzip_proxied any;
    gzip_types
        application/json
        text/plain
        text/css
        application/javascript
        application/x-javascript
        text/xml
        application/xml
        application/xml+rss
        text/javascript
        application/vnd.ms-fontobject
        application/x-font-ttf
        font/opentype
        image/svg+xml
        image/x-icon;

    # Limitar taxa de requisições para evitar abusos
    # Limitar a 10 requisições por segundo por IP
    limit_req_zone $binary_remote_addr zone=apilimit:10m rate=10r/s;
    limit_req zone=apilimit burst=20 nodelay;

    # Para HTTPS (descomente e configure após obter certificados SSL)
    # listen 443 ssl http2;
    # ssl_certificate /etc/letsencrypt/live/api.decision-scoring.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/api.decision-scoring.com/privkey.pem;
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    # ssl_prefer_server_ciphers on;
    # ssl_session_cache shared:SSL:10m;
    # ssl_session_timeout 10m;
}

